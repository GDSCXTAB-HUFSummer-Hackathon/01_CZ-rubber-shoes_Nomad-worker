<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->

    <!-- 32dp -->
    <style name="TextHeadLine4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">32dp</item>
    </style>

    <style name="TextHeadLine4.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeadLine4.Bold.White">
        <item name="android:textColor">@color/nomad_white</item>
    </style>

    <!-- 24dp -->
    <style name="TextHeadLine5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="TextHeadLine5.Black01">
        <item name="android:textColor">@color/nomad_black_01</item>
    </style>

    <style name="TextHeadLine5.Black01.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeadLine5.White">
        <item name="android:textColor">@color/nomad_white</item>
    </style>

    <style name="TextHeadLine5.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeadLine5.Blue">
        <item name="android:textColor">@color/nomad_primary_blue</item>
    </style>

    <style name="TextHeadLine5.Blue.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 20dp -->
    <style name="TextHeadLine6">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextHeadLine6.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeadLine6.Bold.Black">
        <item name="android:textColor">@color/nomad_black_01</item>
    </style>

    <style name="TextHeadLine6.Bold.Blue">
        <item name="android:textColor">@color/nomad_primary_blue</item>
    </style>

    <style name="TextHeadLine6.White">
        <item name="android:textColor">@color/nomad_white</item>
    </style>

    <style name="TextHeadLine6.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 16dp -->
    <style name="TextSubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextSubtitle1.Gray01">
        <item name="android:textColor">@color/nomad_grey_01</item>
    </style>

    <style name="TextSubtitle1.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubtitle1.Bold.Black01">
        <item name="android:textColor">@color/nomad_black_01</item>
    </style>

    <style name="TextSubtitle1.Bold.White">
        <item name="android:textColor">@color/nomad_white</item>
    </style>

    <style name="TextSubtitle1.Bold.Blue">
        <item name="android:textColor">@color/nomad_primary_blue</item>
    </style>

    <!-- 14dp -->
    <style name="TextSubtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextSubtitle2.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubtitle2.Grey">
        <item name="android:textColor">@color/nomad_grey_06</item>
    </style>

    <style name="TextSubtitle2.Bold.Blue">
        <item name="android:textColor">@color/nomad_primary_blue</item>
    </style>

    <!-- 13dp -->
    <style name="TextSubtitle3">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="TextSubtitle3.Blue">
        <item name="android:textColor">@color/nomad_primary_blue</item>
    </style>

    <style name="TextSubtitle3.Grey07">
        <item name="android:textColor">@color/nomad_grey_07</item>
    </style>

    <style name="TextSubtitle3.Black01">
        <item name="android:textColor">@color/nomad_black_01</item>
    </style>

    <style name="TextSubtitle3.Black02">
        <item name="android:textColor">@color/nomad_black_02</item>
    </style>

    <!-- 11dp -->
    <style name="TextCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11dp</item>
    </style>

    <style name="TextCaption.Accent">
        <item name="android:textColor">@color/nomad_accent_red</item>
    </style>

    <style name="TextCaption.Positive">
        <item name="android:textColor">@color/nomad_positive_green</item>
    </style>

    <!-- Image Style -->
    <style name="RoundCorner10">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="RoundCorner20">
        <item name="cornerSize">20dp</item>
    </style>

    <!-- Style to round up the image view  -->
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- BottomSheetDialog style to round up the top corner -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetModelStyle</item>
    </style>

    <style name="BottomSheetModelStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Chip Style -->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/selector_chip_background</item>
        <item name="chipStrokeColor">@drawable/selector_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="shapeAppearanceOverlay">@style/RoundCorner10</item>
        <item name="android:textAppearance">@style/TextSubtitle2.Bold</item>
    </style>
</resources>